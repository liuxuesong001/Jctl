<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/shape_layout"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <!--android:layout_width="@dimen/margin_217.5"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_height="@dimen/margin_137.5">-->
    <LinearLayout
        android:layout_width="@dimen/margin_290dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="@dimen/margin_137.5dp">

        <TextView
            android:id="@+id/tv_dialog"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/sp_font_15"
            android:text="@string/tv_dialog_hc"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:gravity="left|center"
            android:layout_weight="1"
            android:visibility="gone"
            android:text=""
            android:layout_gravity="center"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/sp_font_15"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_32dp"
            android:paddingRight="@dimen/margin_32dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/dialog_confirm"
                android:layout_width="@dimen/margin_86dp"
                android:layout_height="@dimen/margin_27.5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/tv_qd"
                android:layout_marginRight="@dimen/margin_16.25dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_15"
                android:background="@drawable/shape_layout_green"
                />

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="@dimen/margin_86dp"
                android:layout_height="@dimen/margin_27.5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/tv_qxiao"
                android:layout_marginLeft="@dimen/margin_16.25dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_font_15"
                android:background="@drawable/shape_layout_orange"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>