<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <com.colud.jctl.ui.custom.TitleBar
        style="@style/toolbarStyleGreen"
        android:id="@+id/login_toolbar">

        <TextView
            android:id="@+id/title_cotent"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/margin_15dp"
            android:textColor="@color/white"
            android:layout_gravity="end|top"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:textSize="@dimen/sp_font_15"
            android:layout_height="wrap_content"/>


    </com.colud.jctl.ui.custom.TitleBar>

    <com.colud.jctl.ui.custom.BottomScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/layout_grayline_white"
                android:paddingLeft="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/login_hint_uesr"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/personage_user"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingRight="@dimen/margin_15dp"
                android:paddingLeft="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/mine_yhzh"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/personage_userzh"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">
            </View>

            <LinearLayout
                android:id="@+id/personage_type_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/mine_yhlx"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:id="@+id/personage_usertype"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/personage_type_img"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/right_in"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">
            </View>

            <LinearLayout
                android:id="@+id/personage_sex_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/mine_sex"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/personage_sex"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/personage_sex_img"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/right_in"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">
            </View>

            <LinearLayout
                android:id="@+id/personage_age_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/mine_age"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/personage_age"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/personage_age_img"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/right_in"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/mine_nestpad"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/personage_nestpad"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text=""
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/layout_grayline_white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_161.5dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:text="@string/mine_nhsl"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/personage_nhsl"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text=""
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


    </com.colud.jctl.ui.custom.BottomScrollView>


</LinearLayout>
