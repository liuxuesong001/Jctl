<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:id="@+id/personage_headline"
            android:layout_width="wrap_content"
            android:textColor="@color/color_CECECE"
            android:textSize="@dimen/sp_font_15"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/personage_content"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_font_15"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/personage_img"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@mipmap/jctl_launcher"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/color_CECECE"
        android:layout_height="@dimen/margin_1">
    </View>


</LinearLayout>
