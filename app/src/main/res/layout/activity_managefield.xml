<?xml version="1.0" encoding="utf-8"?>
<com.colud.jctl.ui.custom.SoftInputRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.colud.jctl.ui.custom.TitleBar
        style="@style/toolbarStyleGreen"
        android:id="@+id/title_toolbar">

        <TextView
            android:id="@+id/title_cotent"
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"
            android:textSize="@dimen/sp_font_15"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/title_right_img"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="right"
            android:gravity="right"
            android:visibility="gone"
            android:layout_marginRight="@dimen/margin_15dp"
            android:src="@drawable/add_right"
            android:layout_height="wrap_content"/>

    </com.colud.jctl.ui.custom.TitleBar>

    <com.colud.jctl.ui.custom.BottomScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title_toolbar"
        android:layout_above="@+id/btm_delete"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/layout_grayline_white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/tv_field_ntbh"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/sp_font_15"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/tv_field_name"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/sp_font_15"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="wrap_content"
                    android:gravity="left|center"
                    android:visibility="gone"
                    android:background="@null"
                    android:hint="@string/hint_fiedl_nh"
                    android:textSize="@dimen/sp_font_15"
                    android:textColorHint="@color/color_CECECE"
                    android:layout_height="match_parent"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:visibility="gone"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/tv_bm"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/sp_font_15"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/tv_ncz"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/ncz"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/sp_font_15"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/et_ncz"
                    android:layout_width="wrap_content"
                    android:gravity="left|center"
                    android:visibility="gone"
                    android:hint="@string/hint_fiedl_ncz"
                    android:textSize="@dimen/sp_font_15"
                    android:background="@null"
                    android:textColorHint="@color/color_CECECE"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:text="@string/tv_nh"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/nh"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="@dimen/sp_font_15"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_nh"
                    android:layout_width="wrap_content"
                    android:gravity="left|center"
                    android:visibility="gone"
                    android:hint="@string/hint_fiedl_nh"
                    android:textSize="@dimen/sp_font_15"
                    android:background="@null"
                    android:textColorHint="@color/color_CECECE"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">

            </View>

            <LinearLayout
                android:id="@+id/lx_ll"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:text="@string/tv_lx"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/lx"
                    android:layout_width="0dp"
                    android:textSize="@dimen/sp_font_15"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/lx_img"
                    android:layout_width="wrap_content"
                    android:src="@drawable/right_in"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:text="@string/tv_farm_crop"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/crop"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_15"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_crop"
                    android:layout_width="wrap_content"
                    android:gravity="left|center"
                    android:visibility="gone"
                    android:hint="@string/hint_fiedl_crop"
                    android:textSize="@dimen/sp_font_15"
                    android:background="@null"
                    android:textColorHint="@color/color_CECECE"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:text="@string/tv_fpsj"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/fpsj"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_15"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:ellipsize="end"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:text="@string/tv_sszj"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/sszj"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:text=""
                    android:ellipsize="end"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:text="@string/tv_jdsl"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/jdsl"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:text="@string/tv_farm_address"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/addr"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_addr"
                    android:layout_width="wrap_content"
                    android:gravity="left|center"
                    android:visibility="gone"
                    android:hint="@string/hint_fiedl_addr"
                    android:textSize="@dimen/sp_font_15"
                    android:background="@null"
                    android:textColorHint="@color/color_CECECE"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_50dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="@string/tv_farmdetail_area"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/area"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_area"
                    android:layout_width="wrap_content"
                    android:gravity="left|center"
                    android:visibility="gone"
                    android:hint="@string/hint_fiedl_crea"
                    android:textSize="@dimen/sp_font_15"
                    android:inputType="number|numberDecimal"
                    android:background="@null"
                    android:textColorHint="@color/color_CECECE"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/layout_grayline_white"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingRight="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_200dp">

                <TextView
                    android:layout_width="@dimen/margin_102.5dp"
                    android:textSize="@dimen/sp_font_15"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:text="@string/tv_jj"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp"
                    android:layout_margin="@dimen/margin_10dp"
                    android:background="@drawable/layout_grayline_white"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/ncjj"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_font_13"
                        android:layout_gravity="left"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/color_343434"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/et_ncjj"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:gravity="top|left"
                        android:hint="@string/hint_fiedl_ncjj"
                        android:textSize="@dimen/sp_font_13"
                        android:background="@null"
                        android:textColorHint="@color/color_CECECE"
                        android:layout_height="match_parent"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.colud.jctl.ui.custom.BottomScrollView>

    <LinearLayout
        android:id="@+id/btm_delete"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/layout_grayline_gray"
        android:layout_height="@dimen/margin_50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/img_delete"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/early_delete"
            android:textSize="@dimen/sp_font_13"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/color_A6A6A6"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</com.colud.jctl.ui.custom.SoftInputRelativeLayout>