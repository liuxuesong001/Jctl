<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/include_titlebar"></include>


    <LinearLayout
        android:layout_width="@dimen/margin_21.5dp"
        android:gravity="center"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/margin_7dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:background="@drawable/layout_grayline_white"
        android:layout_height="@dimen/margin_14.5dp">

        <TextView
            android:id="@+id/tv_color_off"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="OFF"
            android:textColor="@color/color_3AB07D"
            android:textSize="@dimen/sp_font_9"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="@dimen/margin_200dp">

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/hour_wheelview"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=":"
            android:textSize="@dimen/sp_font_15"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/minute_wheelview"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=":"
            android:visibility="gone"
            android:textSize="@dimen/sp_font_15"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>
        s

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/second_wheelview"
            android:layout_width="@dimen/margin_50dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_chongfu"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/layout_grayline_white"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_15"
            android:text="@string/tv_cf"
            android:layout_gravity="center"
            android:gravity="left"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_zhouqi"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_15"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_gravity="center"
            android:textColor="@color/color_9F9F9F"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_in"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>