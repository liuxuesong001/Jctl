<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/include_toolbar_title"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_height="wrap_content">

            <com.colud.jctl.ui.custom.MyTextView
                android:id="@+id/new_title"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_font_15"
                android:textStyle="bold"
                android:gravity="center"
                android:singleLine="true"
                android:focusable="true"
                android:marqueeRepeatLimit="-1"
                android:ellipsize="marquee"
                android:layout_marginLeft="@dimen/margin_38.5dp"
                android:layout_marginRight="@dimen/margin_38.5dp"
                android:layout_marginTop="@dimen/margin_23dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_18.5dp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/new_date"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_12"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textColor="@color/color_CECECE"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/new_source"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_font_12"
                    android:text="@string/tv_new_info"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textColor="@color/color_CECECE"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/new_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_18dp"
                android:layout_marginBottom="@dimen/margin_19dp"
                android:textSize="@dimen/sp_font_13"
                android:textColor="@color/color_343434"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>