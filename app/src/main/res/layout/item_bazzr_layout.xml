<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/layout_grayline_blue"
              android:layout_height="@dimen/margin_30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <com.colud.jctl.ui.custom.MyTextView
            android:id="@+id/bazaar_name"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="-1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:textSize="@dimen/sp_font_13"
            android:textColor="@color/color_343434"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_1"
        android:background="@color/skyblue"
        android:layout_height="match_parent">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <com.colud.jctl.ui.custom.MyTextView
            android:id="@+id/bazaar_price"
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="-1"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/sp_font_13"
            android:textColor="@color/color_343434"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <View
        android:layout_width="@dimen/margin_1"
        android:background="@color/skyblue"
        android:layout_height="match_parent">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <com.colud.jctl.ui.custom.MyTextView
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="-1"
            android:ellipsize="marquee"
            android:id="@+id/bazaar_address"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/sp_font_13"
            android:textColor="@color/color_343434"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <View
        android:layout_width="@dimen/margin_1"
        android:background="@color/skyblue"
        android:layout_height="match_parent">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <com.colud.jctl.ui.custom.MyTextView
            android:id="@+id/bazaar_date"
            android:singleLine="true"
            android:focusable="true"
            android:marqueeRepeatLimit="-1"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/sp_font_13"
            android:textColor="@color/color_343434"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>