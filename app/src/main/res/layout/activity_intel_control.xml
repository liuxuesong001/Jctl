<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/include_titlebar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:id="@+id/intel_ll"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/layout_grayline_white"
            android:layout_height="@dimen/margin_50dp"
            android:paddingRight="@dimen/sp_font_15"
            android:paddingLeft="@dimen/sp_font_15">

            <TextView
                android:layout_width="@dimen/margin_102.5dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/tv_sx"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/intel_tv"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/right_in"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/margin_50dp"
            android:paddingRight="@dimen/sp_font_15"
            android:paddingLeft="@dimen/sp_font_15">

            <TextView
                android:layout_width="@dimen/margin_102.5dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/tv_zgzs"
                android:textSize="@dimen/sp_font_15"
                android:textColor="@color/color_343434"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_max"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_font_13"
                android:hint="@string/hint_kz_max"
                android:background="@null"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:textColorHint="@color/color_CECECE"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/intel_max"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_weight="1"
                android:visibility="gone"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/grayline"
            android:layout_height="@dimen/margin_1">

        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/margin_50dp"
            android:paddingRight="@dimen/sp_font_15"
            android:paddingLeft="@dimen/sp_font_15">

            <TextView
                android:layout_width="@dimen/margin_102.5dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/tv_zdzs"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_mix"
                android:layout_width="match_parent"
                android:textSize="@dimen/sp_font_13"
                android:hint="@string/hint_kz_mix"
                android:background="@null"
                android:inputType="numberDecimal"
                android:layout_gravity="center"
                android:textColorHint="@color/color_CECECE"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/intel_mix"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:visibility="gone"
                android:layout_weight="1"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/layout_grayline_white"
            android:layout_height="@dimen/margin_50dp"
            android:paddingRight="@dimen/sp_font_15"
            android:paddingLeft="@dimen/sp_font_15">

            <TextView
                android:layout_width="@dimen/margin_102.5dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="@string/tv_yczq"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/intel_et"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColorHint="@color/color_CECECE"
                android:hint="@string/hint_kz_zqzs"
                android:layout_weight="1"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_13"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/intel_delete"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/layout_grayline_gray"
        android:layout_height="@dimen/margin_50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/img_delete"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/early_delete"
            android:textSize="@dimen/sp_font_13"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/color_A6A6A6"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>