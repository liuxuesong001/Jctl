<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/layout_grayline_white"
              android:layout_width="match_parent"
              android:weightSum="4"
              android:layout_marginTop="@dimen/margin_10dp"
              android:layout_height="@dimen/margin_40dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/nhxm"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_13"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text="@string/tv_nhxm"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_1"
        android:background="@color/grayline"
        android:layout_height="match_parent">

    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/sxnt"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_13"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text="@string/tv_sxnt"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_1"
        android:background="@color/grayline"
        android:layout_height="match_parent">

    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/jdsl"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_13"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text="@string/tv_jdsl"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_1"
        android:background="@color/grayline"
        android:layout_height="match_parent">

    </View>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/sxtsl"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_13"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text="@string/tv_sxtsl"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>