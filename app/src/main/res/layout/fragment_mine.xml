<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/mine_view_rl"
                android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/mine_title_rl"
        android:layout_width="match_parent"
        android:background="@drawable/mine_bj"
        android:layout_height="@dimen/margin_177dp">

        <!--<include layout="@layout/include_mine_titlebar" > </include>-->
        <com.colud.jctl.ui.custom.TitleBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/mytoolbarStyle"
            android:id="@+id/mine_toolbar">

        </com.colud.jctl.ui.custom.TitleBar>

    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/mine_bar_view"
        android:layout_width="match_parent"
        android:background="@drawable/layout_grayline_white"
        android:layout_below="@+id/mine_title_rl"
        android:layout_height="@dimen/margin_50dp">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/mine_login_rl"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_above="@+id/mine_bar_view"
        android:layout_toRightOf="@+id/mine_circleImageView"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mine_login"
            android:layout_width="wrap_content"
            android:text="@string/mine_dl"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_font_15"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/mine_fuhao"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_2.5dp"
            android:textSize="@dimen/sp_font_15"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mine_reg"
            android:layout_width="wrap_content"
            android:text="@string/mine_zc"
            android:layout_marginLeft="@dimen/margin_2.5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_font_15"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_font_15"
        android:layout_toRightOf="@+id/mine_circleImageView"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_above="@+id/mine_bar_view"
        android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mine_circleImageView"
        android:layout_width="@dimen/margin_72dp"
        android:layout_height="@dimen/margin_72dp"
        app:civ_border_color="@color/white"
        android:src="@drawable/mine_icon"
        app:civ_border_width="@dimen/margin_3dp"
        android:layout_marginLeft="@dimen/margin_7.5dp"
        android:layout_marginTop="@dimen/margin_134dp"/>

    <ListView
        android:id="@+id/mine_listview"
        android:layout_below="@+id/mine_bar_view"
        android:layout_width="match_parent"
        android:background="@drawable/layout_grayline_white"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_height="match_parent">
    </ListView>


</RelativeLayout>










