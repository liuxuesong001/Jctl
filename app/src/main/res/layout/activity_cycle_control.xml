<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/include_titlebar"></include>

    <LinearLayout
        android:id="@+id/off_ll_a"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_grayline_white"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">


        <LinearLayout
            android:layout_width="@dimen/margin_21.5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/layout_grayline_white"
            android:layout_height="@dimen/margin_14.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ON"
                android:textColor="@color/color_3AB07D"
                android:textSize="@dimen/sp_font_9"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="left|center"
            android:layout_weight="1"
            android:id="@+id/on_ll"
            android:paddingLeft="@dimen/margin_8dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/open_date"
                android:layout_gravity="left"
                android:gravity="left"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/open_cycle"
                android:layout_gravity="left"
                android:gravity="left"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_on"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text="@string/tv_djszon"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_in"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/off_on_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:sb_show_indicator="false"
            android:visibility="gone"
            app:sb_checked="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/off_ll_b"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_grayline_white"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <LinearLayout
            android:layout_width="@dimen/margin_21.5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/layout_grayline_white"
            android:layout_height="@dimen/margin_14.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="OFF"
                android:textColor="@color/color_DD5B28"
                android:textSize="@dimen/sp_font_9"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="left|center"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:id="@+id/off_ll"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/close_date"
                android:layout_gravity="left"
                android:gravity="left"
                android:text=""
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/close_date_cycle"
                android:layout_gravity="left"
                android:gravity="center"
                android:visibility="gone"
                android:text=""
                android:layout_width="wrap_content"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_10"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_off"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:layout_marginRight="@dimen/margin_5dp"
                android:text="@string/tv_djszoff"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_in"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/off_on_xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:sb_show_indicator="false"
            android:visibility="gone"
            app:sb_checked="true"/>
    </LinearLayout>

</LinearLayout>