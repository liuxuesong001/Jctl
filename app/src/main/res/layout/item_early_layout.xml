<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/margin_10dp"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/early_item_layou"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <CheckBox
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_5dp"
            android:id="@+id/early_checkbox"
            android:layout_width="@dimen/margin_15dp"
            android:layout_gravity="center"
            android:button="@null"
            android:background="@drawable/checkbox_style_early"
            android:layout_height="@dimen/margin_15dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/early_checkbox"
            android:layout_width="@dimen/margin_412.5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_pst_early"
            android:paddingTop="@dimen/margin_10dp"
            android:paddingBottom="@dimen/margin_15dp"
            android:paddingLeft="@dimen/margin_15dp"
            android:paddingRight="@dimen/margin_15dp"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="@dimen/margin_37dp">


                <TextView
                    android:id="@+id/early_farmName"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:textSize="@dimen/sp_font_15"
                    android:textColor="@color/color_3AB07D"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/early_new_staue"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_toLeftOf="@+id/early_delete"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/early_delete"
                    android:layout_width="wrap_content"
                    android:src="@drawable/img_delete"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:background="@color/grayline"
                android:layout_height="@dimen/margin_1">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="农田编号:"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/early_farmNum"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="农田编号:"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/early_froplandNum"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="节点编号:"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/early_nodeNum"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="警示时间:"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/early_Date"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_343434"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/yj"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/early_jsnr"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/sp_font_13"
                    android:textColor="@color/color_DD5B28"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/early_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_font_13"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:text=""
                android:textColor="@color/color_343434"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
