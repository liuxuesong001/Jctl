<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <include layout="@layout/include_titlebar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_grayline_white"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/sp_font_15"
            android:text="@string/tv_dqsxzq"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/cycles_ll"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cycles_date"
                android:layout_width="0dp"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_font_15"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/margin_10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/right_in"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>