<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/include_toolbar_title"></include>

    <RelativeLayout
        android:id="@+id/off_a"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/layout_grayline_white"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_15"
            android:layout_centerVertical="true"
            android:text="@string/tv_zqsx"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_in"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/off_d"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/layout_grayline_white"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_15"
            android:layout_centerVertical="true"
            android:text="@string/tv_zqkz"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_in"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/off_b"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_15dp"
        android:background="@drawable/layout_grayline_white"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_15"
            android:layout_centerVertical="true"
            android:text="@string/tv_znkz"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/right_in"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/off_c"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/layout_grayline_white"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:layout_height="@dimen/margin_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_font_15"
            android:layout_centerVertical="true"
            android:text="@string/tv_sdkz"
            android:textColor="@color/color_343434"
            android:layout_height="wrap_content"/>


        <com.suke.widget.SwitchButton
            android:id="@+id/off_on_sd"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_show_indicator="false"
            app:sb_checked="true"/>

    </RelativeLayout>

</LinearLayout>